    // Pour les boutons de dÃ©filement 
    script. 
      document.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll(".defilement-slider").forEach(slider => {
          const track = slider.querySelector(".defilement-track");
          const left = slider.querySelector(".left-button");
          const right = slider.querySelector(".right-button");
          
          if (left && right && track) {
            left.addEventListener("click", () => {
              track.scrollBy({ left: -300, behavior: "smooth" });
            });
            right.addEventListener("click", () => {
              track.scrollBy({ left: 300, behavior: "smooth" });
            });
          }
        });
      });